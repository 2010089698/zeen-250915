{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "features/*": ["features/*"],
      "domain/*": ["domain/*"],
      "ports/*": ["ports/*"],
      "infra/*": ["infra/*"],
      "schema/*": ["schema/*"],
      "config/*": ["config/*"],
      "test/*": ["test/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
